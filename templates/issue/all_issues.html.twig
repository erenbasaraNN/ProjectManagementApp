{% extends 'base.html.twig' %}

{% block title %}All Issues{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">All Issues</h1>
        <div class="table-responsive">
            <table class="table table-borderless table-hover">
                <thead class="bg-primary text-white">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Task</th>
                    <th>Assigned Users</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for issue in issues %}
                    <tr>
                        <td>{{ issue.name }}</td>
                        <td>{{ issue.description }}</td>
                        <td>{{ issue.status }}</td>
                        <td>{{ issue.task.name }}</td>
                        <td>
                            {% for user in issue.assignedUsers %}
                                {{ user.email }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center">
                                <a href="{{ path('issue_show', {'issueId': issue.id}) }}" class="btn btn-outline-info btn-sm mx-1">View</a>
                                <a href="{{ path('issue_edit', {'issueId': issue.id}) }}" class="btn btn-outline-primary btn-sm mx-1">Edit</a>
                                <a href="#" class="btn btn-outline-danger btn-sm mx-1" onclick="document.getElementById('delete-form-{{ issue.id }}').submit(); return false;">Delete</a>
                            </div>
                            <form id="delete-form-{{ issue.id }}" method="post" action="{{ path('issue_delete', {'issueId': issue.id}) }}" class="d-none">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ issue.id) }}">
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted">No issues found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end mt-3">
            <a href="{{ path('issue_new') }}" class="btn btn-primary">Create New Issue</a>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Issue List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Issues</h1>
        <div class="table-responsive">
            <table class="table table-borderless table-hover">
                <thead class="bg-primary text-white">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Status</th>
                    <th scope="col">Assigned Users</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for issue in issues %}
                    <tr class="align-middle">
                        <td>{{ issue.name }}</td>
                        <td>{{ issue.description }}</td>
                        <td>{{ issue.status }}</td>
                        <td>
                            {% for user in issue.assignedUsers %}
                                {{ user.email }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </td>
                        <td class="text-center">
                            <a href="{{ path('issue_show', {'id': issue.id}) }}" class="btn btn-outline-info btn-sm mx-1">View</a>
                            <a href="{{ path('issue_edit', {'id': issue.id}) }}" class="btn btn-outline-primary btn-sm mx-1">Edit</a>
                            <form method="post" action="{{ path('issue_delete', {'id': issue.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ issue.id) }}">
                                <button class="btn btn-outline-danger btn-sm mx-1">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">No issues found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="d-flex justify-content-end mt-3">
                <a href="{{ path('issue_new') }}" class="btn btn-primary">Create New Issue</a>
            </div>
        </div>
    </div>
{% endblock %}

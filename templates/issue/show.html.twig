{% extends 'base.html.twig' %}

{% block title %}Issue{% endblock %}

{% block body %}
    <h1>Issue</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ issue.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ issue.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ issue.description }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ issue.startDate ? issue.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ issue.endDate ? issue.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ issue.status }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ issue.priority }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_issue_index') }}">back to list</a>

    <a href="{{ path('app_issue_edit', {'id': issue.id}) }}">edit</a>

    {{ include('issue/_delete_form.html.twig') }}
{% endblock %}

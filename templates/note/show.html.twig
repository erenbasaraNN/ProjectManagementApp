{% extends 'base.html.twig' %}

{% block title %}Note Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div>
                    <div class="card-body">
                        <h1 class="text-center mb-4">Note Details</h1>
                        <table class="table table-bordered">
                            <tr>
                                <th>Name</th>
                                <td>{{ note.title }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ note.content }}</td>
                            </tr>
                        </table>

                        <a href="{{ path('note_edit', {id: note.id}) }}" class="btn btn-primary mt-3 w-100">Edit</a>
                        <a href="{{ path('note_index') }}" class="btn btn-secondary mt-3 w-100">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

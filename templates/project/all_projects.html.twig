
{% extends 'base.html.twig' %}

{% block title %}All Projects{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">All Projects</h1>
        <table class="table table-hover">
            <thead class="bg-primary text-white">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Brand</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    <td>{{ project.name }}</td>
                    <td>{{ project.description }}</td>
                    <td>{{ project.status|capitalize }}</td>
                    <td>
                        {% if project.brand %}
                            {{ project.brand.name }}
                        {% else %}
                            <span class="text-muted">No Brand</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('project_show', {'projectId': project.id}) }}" class="btn btn-outline-info btn-sm">View</a>
                        <a href="{{ path('project_edit', {'projectId': project.id}) }}" class="btn btn-outline-primary btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted">No projects found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('project_new') }}" class="btn btn-primary mt-3">Create New Project</a>
    </div>
{% endblock %}

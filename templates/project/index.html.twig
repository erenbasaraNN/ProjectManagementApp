{% extends 'base.html.twig' %}

{% block title %}Project List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Project List</h1>
        <table class="table table-striped table-hover mt-3">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    <td>{{ project.name }}</td>
                    <td>{{ project.description }}</td>
                    <td>{{ project.status }}</td>
                    <td>
                        <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                        <form method="post" action="{{ path('project_delete', {'id': project.id}) }}" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('project_new') }}" class="btn btn-success">Create new Project</a>
    </div>
{% endblock %}

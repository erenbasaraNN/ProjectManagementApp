{% extends 'base.html.twig' %}

{% block title %}Projects for Brand: {{ brand.name }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Projects for Brand: {{ brand.name }}</h1>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    <td>{{ project.name }}</td>
                    <td>{{ project.description }}</td>
                    <td>{{ project.status }}</td>
                    <td>
                        <a href="{{ path('project_show', {'brandId': brand.id, 'projectId': project.id}) }}" class="btn btn-info">View</a>
                        <a href="{{ path('project_edit', {'brandId': brand.id, 'projectId': project.id}) }}" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">No projects found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('project_new', {'brandId': brand.id}) }}" class="btn btn-success">Create New Project</a>
    </div>
{% endblock %}

{# templates/task/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Tasks for {{ project.name }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Tasks for {{ project.name }}</h1>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Task Name</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.name }}</td>
                    <td>{{ task.status }}</td>
                    <td>
                        <!-- Ensure both projectId and taskId are passed -->
                        <a href="{{ path('task_show', {projectId: project.id, taskId: task.id}) }}" class="btn btn-info btn-sm">View</a>
                        <a href="{{ path('task_edit', {projectId: project.id, taskId: task.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">No tasks found for this project.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('task_new', {projectId: project.id}) }}" class="btn btn-primary">Create New Task</a>
    </div>
{% endblock %}
